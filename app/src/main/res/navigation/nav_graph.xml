<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.crewl.ui.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_countryCodeFragment"
            app:popUpTo="@id/loginFragment"
            app:destination="@id/countryCodeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_verificationFragment"
            app:destination="@id/verificationFragment" />
    </fragment>

    <dialog
        android:id="@+id/countryCodeFragment"
        android:name="com.example.crewl.ui.bottomSheet.countryCode.CountryCodeFragment"
        android:label="CountryCodeFragment" />
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.example.crewl.ui.bottomSheet.verification.VerificationFragment"
        android:label="fragment_verification"
        tools:layout="@layout/fragment_verification" />
</navigation>