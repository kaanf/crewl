<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputContainerEditText"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_55"
        android:background="@drawable/edit_text_input_background"
        android:drawablePadding="@dimen/padding_14"
        android:drawableTint="@color/default_ic_bg_passive"
        android:fontFamily="@font/inter_regular"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:letterSpacing="-0.04"
        android:paddingStart="@dimen/padding_20"
        android:paddingEnd="@dimen/padding_20"
        android:textAllCaps="false"
        android:textColor="@color/default_input_text_active"
        android:textColorHint="@color/default_input_text_hint"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:translationZ="@dimen/margin_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/inputEditText"
        android:layout_alignEnd="@id/inputEditText"
        android:layout_alignBottom="@id/inputEditText"
        android:layout_marginEnd="20dp"
        app:tint="@color/default_ic_bg_passive"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/inputEditText"
        android:layout_marginTop="@dimen/margin_6"
        android:fontFamily="@font/inter_regular"
        android:letterSpacing="-0.04"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:textColor="@color/default_error"
        android:textSize="@dimen/font_13" />

</RelativeLayout>